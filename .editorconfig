root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{json,yaml,yml,csproj,j2}]
indent_size = 2

[*.{css,sln}]
indent_style = tab

[Makefile]
indent_style = tab

[{.secrets.baseline,Cargo.lock,config.xml}]
indent_size = unset
